    <Text fill="WHITE" layoutX="950.0" layoutY="185.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Dặn dò">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <Text fill="WHITE" layoutX="35.0" layoutY="235.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Tên bệnh nhân: ">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="tfPatientName" alignment="TOP_LEFT" layoutX="175.0"
               layoutY="215.0" prefWidth="195">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Text fill="WHITE" layoutX="35.0" layoutY="285.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Ngày sinh: ">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="tfDateOfBirth" alignment="TOP_LEFT" layoutX="145.0"
               layoutY="265.0" prefWidth="105">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Text fill="WHITE" layoutX="35.0" layoutY="335.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Giới tính: ">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="tfGender" alignment="TOP_LEFT" layoutX="135.0"
               layoutY="315.0" prefWidth="95">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Text fill="WHITE" layoutX="35.0" layoutY="385.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Số căn cước: ">
        <font>
            <Font size="18.0"/>
