    </TextField>
    <Text fill="WHITE" layoutX="35.0" layoutY="435.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Địa chỉ: " wrappingWidth="290">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="tfAddress" alignment="TOP_LEFT" layoutX="110.0"
               layoutY="415.0" prefWidth="255">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <TextField fx:id="tfDateTime" alignment="TOP_LEFT" layoutX="403.5"
               layoutY="215.0" prefWidth="105">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Text fill="WHITE" layoutX="655.0" layoutY="235.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="Lưu ý: Nhập đúng theo format: Tên bệnh - Đơn thuốc - Dặn dò" wrappingWidth="390">
