            <Font size="18.0"/>
        </font>
    </Text>
    <TextArea fx:id="tfDiseaseInformation" layoutX="560" layoutY="215.0"
              prefWidth="545" wrapText="true"
              prefHeight="170" style="-fx-control-inner-background: #2D2A2A; -fx-prompt-text-fill: #AEAEAE;"
