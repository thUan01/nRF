        <font>
            <Font size="16.0"/>
        </font>
    </TextArea>
    <Button layoutX="782" layoutY="410.0" mnemonicParsing="false" onAction="#complete"
            prefHeight="30.0" prefWidth="101.0" text="Hoàn thành">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <Button layoutX="1137.0" layoutY="470.0" mnemonicParsing="false" onAction="#BackToMain"
            prefHeight="30.0" prefWidth="63.0" text="⏪ Trở lại">
        <font>
            <Font size="12.0"/>
        </font>
    </Button>
</AnchorPane>
